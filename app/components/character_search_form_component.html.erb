<%= form_with(url: stories_path, method: :get, local: true) do %>
  <div class="flex flex-col mb-4">
    <%= label_tag :character_name, 'Enter character name:', class: "text-white" %>
    <%= text_field_tag :character_name, params[:character_name], placeholder: "e.g., Storm", class: "text-black p-2 rounded" %>
  </div>

  <button type="submit" class="flex justify-center bg-[#ee171f] pointer mt-4 w-full p-4 text-semibold rounded">
    <%= submit_tag "Get a random story" %>
  </button>
<% end %>
